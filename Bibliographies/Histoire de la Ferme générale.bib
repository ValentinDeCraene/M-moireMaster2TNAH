@article{logetteRegieGeneraleAu1982,
	title = {La Régie générale au temps de Necker et de des successeurs (1777-1786)},
	volume = {60},
	issn = {0035-3280},
	url = {https://www.jstor.org/stable/43846745},
	abstract = {Tout au long du xviiie siècle, mais plus particulièrement en ses dernières années, la Régie générale est préférée à la Ferme comme mode de perception de l'impôt. Necker lui donne en 1777 une structure discrète mais efficace et, en 1780, elle se voit confier la perception d'une grande partie des impôts indirects, notamment les aides et les droits domaniaux. Deux cahiers, couvrant la période de 1777 à 1786 et conservés aux Archives nationales, révèlent les difficultés mais aussi les principes en gestation d'une administration nouvelle: aux prises avec des communautés traditionnellement privilégiées ou de petites localités souhaitant vivement être exemptées du paiement des droits réservés, la Régie modèle sa politique d'acceptation ou de refus sur la gravité des problèmes qui lui sont soumis, faisant toujours sentir ce que son éventuelle bienveillance a d'exceptionnel; en proie aux réclamations de son propre personnel, à propos de licenciements, de mutations, de redditions de comptes, d'indemnisation en cas de dommages, elle tente d'être juste, sans jamais sacrifier les intérêts de l'Etat, qu'elle représente.},
